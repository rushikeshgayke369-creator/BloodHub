<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/ivregistration_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bloodhub"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                />

            <EditText
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/et_register_name"
                android:drawableLeft="@drawable/icon_profile"
                android:drawablePadding="8dp"
                android:drawableTint="#999999"
                android:hint="Name"
                android:background="@drawable/edittext_box"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="text"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/et_register_mobileno"
                android:drawableLeft="@drawable/icon_mobile"
                android:drawablePadding="8dp"
                android:drawableTint="#999999"
                android:hint="Mobile No."
                android:background="@drawable/edittext_box"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="number"
                android:fontFamily="sans-serif-medium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/et_register_emailid"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:drawableTint="#999999"
                android:background="@drawable/edittext_box"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/et_register_username"
                android:drawableLeft="@drawable/icon_username"
                android:drawablePadding="8dp"
                android:drawableTint="#999999"
                android:hint="Username"
                android:background="@drawable/edittext_box"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="text"
                android:fontFamily="sans-serif-medium"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="8dp"
                    android:drawableTint="#999999"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:background="@drawable/edittext_box"
                    />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_register_toggle_password"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_eye"
                    app:tint="#999999"
                    android:padding="12dp"
                    />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnregister_register"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_rounded_blue"
                android:text="Register"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Register_LoginHere"
            android:text="Already a member ? Login Here"
            android:textColor="#1A73E8"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>