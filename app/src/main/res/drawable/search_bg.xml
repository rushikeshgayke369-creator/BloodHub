<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Thin gray border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Inner padding for text -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
